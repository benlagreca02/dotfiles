#!/bin/bash

# must be bash for [[ ]] style if statements

case $BLOCK_BUTTON in
    1) pactl set-sink-mute @DEFAULT_SINK@ toggle; kill -44 $(pidof dwmblocks) ;; 
    3) notify-send "Volume Module" "Left click to toggle mute (one day...)";;
esac

if [[ "$(pulsemixer --get-mute)" == "1" ]]; then
    echo " M "
else
    vol="$(pulsemixer --get-volume)"
    # bash bullshit
    # https://youtu.be/QXineadwG4E?si=ER5VQPEqqD9Lng2I
    vol="${vol%% *}"
    echo "$vol%"
fi






